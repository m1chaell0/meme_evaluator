<%= form_for meme do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>


  <div>
    <%= f.label :image %>
    <%= f.file_field :picture_url %>
    <%= f.hidden_field :picture_url_cache %>
  </div>

  <% if meme.picture_url? %>
    <%= image_tag meme.picture_url.small_thumb.url %>
  <% end %>
  <%= f.submit %>

  <% if meme.picture_url? %>
    <%= image_tag meme.picture_url.thumb.url %>
    <div>
      <%= label_tag :remove_picture do %>
        Remove picture
        <%= f.check_box :remove_picture_url %>
      <% end %>
    </div>
  <% end %>

  <%= render 'shared/errors', object: meme %>
<% end %>